<div class="card w-50 mx-auto mt-5">
  <div class="card-body">
    <h1 class="card-title text-center mb-4">Edit Product</h1>

    <%= form_for @product, class: "form" do |f| %>
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :price, class: "form-label" %>
        <%= f.text_field :price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :product_type %>
        <%= f.select :product_type, ['Gaming PC', 'Consoles', 'Games'], {}, { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
      </div>

      <%= f.submit 'Update', class: "btn btn-primary" %>
    <% end %>

    <%= link_to 'Back', request.referer || product_path, class: "btn btn-link" %>
  </div>
</div>
